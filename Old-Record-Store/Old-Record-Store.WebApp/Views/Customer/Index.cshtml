@model IEnumerable<Old_Record_Store.WebApp.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>

<h1>Customer List</h1>

<div>
    <hr />
    <dl class="row">
    </dl>
</div>
<table>
    <thead>
    <th> Full Name</th>
    <th>Address</th>
    <th>E-mail</th>
    <th>Phone</th>
    <th>Customer ID</th>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.FullName)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.Address)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.Email)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.Phone)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.CustomerId)
            </td>
        </tr>

    }

</table>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
