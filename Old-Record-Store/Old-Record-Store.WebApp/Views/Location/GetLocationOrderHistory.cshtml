@model IEnumerable<Old_Record_Store.WebApp.Models.OrderViewModel>

@{
    ViewData["Title"] = "GetLocationOrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>

<h1>Location Order History</h1>

<div>
    <hr />
    <dl class="row">
    </dl>
</div>
<table>
    <thead>
    <th> Order ID</th>
    <th> Date </th>
    <th> Customer ID</th>
    <th> Location ID </th>
    </thead>

    @foreach (var item in Model)
    {
<tr>
    <td class="col-sm-10">
        @Html.DisplayFor(model => item.OrderId)
    </td>
    <td class="col-sm-10">
        @Html.DisplayFor(model => item.Date)
    </td>
    <td class="col-sm-10">
        @Html.DisplayFor(model => item.CustomerId)
    </td>
    <td class="col-sm-10">
        @Html.DisplayFor(model => item.LocationId)
    </td>
</tr>
    }
</table>
<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
