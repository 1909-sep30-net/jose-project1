@model IEnumerable<Old_Record_Store.WebApp.Models.OrderViewModel>

@{
    ViewData["Title"] = "getCustomerOrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>

<h1>Customer List</h1>

<div>
    <hr />
    <dl class="row">
    </dl>
</div>
<table>
    <thead>
    <th>Order I.D</th>
    <th>Date</th>
    <th>Customer I.D</th>
    <th>Location I.D</th>

    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td class="col-sm-10">
                @Html.DisplayFor(model => item.OrderId)
            </td>

            <td class="col-sm-10">
                @Html.DisplayFor(model => item.Date)
            </td>

            <td class="col-sm-10">
                @Html.DisplayFor(model => item.CustomerId)
            </td>

            <td class="col-sm-10">
                @Html.DisplayFor(model => item.LocationId)
            </td>
        </tr>
    }
    </dl>
    </div>
    <div>
        <a asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
