@model Old_Record_Store.WebApp.Models.FormLocationID

@{
    ViewData["Title"] = "GetLocationID";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lookup a location's Order History</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetLocationOrderHistory" asp-controller="Location">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocationID" class="control-label"></label>
                <input asp-for="LocationID" class="form-control" />
                <span asp-validation-for="LocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>

